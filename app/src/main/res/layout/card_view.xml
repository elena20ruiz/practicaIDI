<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:background="@color/colorGrey">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/colorGrey">

            <FrameLayout
                android:layout_width="93dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                     android:src="?android:attr/alertDialogIcon"
                    android:id="@+id/image_theme"
                    android:padding="3dp" />
            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/title_film"
                    android:layout_weight="1"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="7dp"
                    android:layout_margin="0dp"
                    android:textSize="35px"
                    android:shadowColor="@color/colorPrimary"
                    android:textColor="@color/colorPrimaryLight"
                    android:fontFamily="sans-serif-smallcaps" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp">

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/protagonist"
                        android:paddingTop="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:fontFamily="Roboto-Condensed" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/ratingBar"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:padding="0dp"
                        android:isIndicator="true"
                        android:maxWidth="30dp"
                        android:minWidth="5dp"
                        android:maxHeight="57dp"
                        android:paddingLeft="0dp"
                        android:layout_below="@+id/protagonist"
                        android:layout_toStartOf="@+id/director"
                        android:theme="@style/RatingBar"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>