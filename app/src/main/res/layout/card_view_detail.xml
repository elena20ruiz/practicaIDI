<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="225dp">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/cardContent"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">

            <FrameLayout
                android:layout_width="93dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="?android:attr/alertDialogIcon"
                    android:id="@+id/image_theme"
                    android:padding="3dp" />
            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_film"
                    android:layout_weight="1"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="7dp"
                    android:layout_margin="0dp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/bright_foreground_material_dark"
                    android:fontFamily="sans-serif" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Director:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/director"
                        android:paddingTop="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:fontFamily="sans-serif-condensed" />

                    <TextView
                        android:text="TextView"
                        android:id="@+id/directorName"
                        android:paddingTop="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/director" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Protagonista:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/protagonista"
                        android:paddingTop="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:fontFamily="sans-serif-condensed" />

                    <TextView
                        android:text="TextView"
                        android:id="@+id/protagonistaName"
                        android:paddingTop="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/protagonista" />
                </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="País:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pais"
                            android:paddingTop="8dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:fontFamily="sans-serif-condensed" />

                        <TextView
                            android:text="TextView"
                            android:id="@+id/paisName"
                            android:paddingTop="8dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/pais" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Any d'Estrena:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/any"
                            android:paddingTop="8dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:fontFamily="sans-serif-condensed" />

                        <TextView
                            android:text="TextView"
                            android:id="@+id/anyName"
                            android:paddingTop="8dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/any" />
                    </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Puntuació:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/puntuacio"
                        android:paddingTop="8dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:numStars="5"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:layout_marginLeft="10dp"
                        android:maxHeight="57dp"
                        android:maxWidth="70dp"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:text="TextView"
                        android:id="@+id/puntuacioName"
                        android:paddingTop="8dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal|bold"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/cardContent"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_weight="50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="ESBORRAR"
                    android:background="@drawable/button_borrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="3dp"
                    android:id="@+id/borrar"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:layout_height="wrap_content">

                <Button
                    android:text="EDITAR"
                    android:background="@drawable/button_editar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                </Button>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/id"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>